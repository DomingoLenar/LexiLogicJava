            <TableColumn fx:id="score" minWidth="0.0" prefWidth="110.0" style="-fx-background-color: transparent;" text="Score" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button fx:id="backButton" layoutY="6.0" onAction="#handleBack" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="68.0" fitWidth="69.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../icons/BackButton.png" />
               </image>
            </ImageView>
         </graphic></Button>
   </children>
